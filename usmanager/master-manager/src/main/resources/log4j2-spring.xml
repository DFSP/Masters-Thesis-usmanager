<Configuration>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%style{%d{dd/MMM/yy HH:mm:ss:SSS}}{black} %highlight{%-5level }[%style{%t}{dim,blue}] %style{%C{1.}}{dim,yellow}: %style{%msg%n%throwable}{bright}" />
        </Console>
        <RollingFile name="RollingFile"
                     fileName="./logs/log4j2-logger.log"
                     filePattern="./logs/$${date:MM-yyyy}/log4j2-logger-%d{-dd-MMM-yyyy}-%i.log.gz">
            <PatternLayout>
                <pattern>%d %p %C{1.} [%t] %m%n</pattern>
            </PatternLayout>
            <Policies>
                <!-- rollover on startup, daily and when the file reaches 10 MegaBytes -->
                <OnStartupTriggeringPolicy />
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10 MB" />
            </Policies>
        </RollingFile>
        <JPA name="databaseAppender" persistenceUnitName="loggingPersistenceUnit"
             entityClassName="pt.unl.fct.microservicemanagement.mastermanager.logging.JpaLogEntity" />
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console" />
            <AppenderRef ref="RollingFile" />
            <AppenderRef ref="databaseAppender"/>
        </Root>
        <Logger name="pt.unl.fct.microservicemanagement.mastermanager" level="trace"/>
    </Loggers>

</Configuration>